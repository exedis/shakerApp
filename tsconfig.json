{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "baseUrl": "./src",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "paths": {
      "@typings": ["typings"],
      "@typings/*": ["typings/*"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@api": ["api"],
      "@api/*": ["api/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@public": ["public"],
      "@public/*": ["public/*"],
      "@screens": ["screens"],
      "@screens/*": ["screens/*"],
      "@consts": ["consts"],
      "@consts/*": ["consts/*"],
      "@src": ["."],
      "@src/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
